    id: Int!
}

#@Provider(name="sql")
#@Table(name="CUSTOMER", discover=true)
#@Parent(name="IPerson")
interface ICustomer {
    id: Int!
}

#@Provider(name="sql")
#@Table(name="EMPLOYEE", discover=true)
#@Parent(name="IPerson")
interface IEmployee {
    id: Int!
    email: String!
}

interface IUser {
    email: String!
